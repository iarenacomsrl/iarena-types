{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es6",
      "es2017",
      "dom",
      "esnext.intl",
      "es2017.intl",
      "es2018.intl"
    ],
    "baseUrl": ".",
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "declarationMap": true,
    "jsx": "react"
  },
  "include": [
    "./e2e/**/*",
    "./scripts/**/*",
    "./tests/**/*",
    "./types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}